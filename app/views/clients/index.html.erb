<h1>Clients</h1>
<hr>
<div class="row">
<% @clients.each do |c| %>
    <div class="col-lg-4 py-4">
        <div class="card">
        <h4 class="text-center"> <span class="feather-32" data-feather="user"> </span><br>  <%= c.name %></h4>
        <hr>
        <p>Phone: <%= c.phone %></p>
        <p>Email: <%= c.email %></p>
        <hr>
        <div class="btn-group">
            <%= link_to "Edit", edit_client_path(c), class: "btn btn-outline-primary btn-sm" %>
            <%= link_to "Delete", client_path(c), method: :delete, class: "btn btn-outline-success btn-sm"  %>
        </div>
    </div>
</div>
        <% end %>
</div>



    

       

