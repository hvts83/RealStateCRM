<h1> Create a new Appointment </h1><hr>

<%= form_for @customers do |f| %>
    <%= f.label :description %>
    <%= f.text_field :description %><br>
    <%= f.label :time %>
    <%= f.text_field :time %><br>
    <%= f.label :date %>
    <%= f.text_field :date %><br>
    <%= f.label :location %>
    <%= f.text_field :location %><br>
    <%= f.collection_select :customer_id, Customer.all, :id, :name, prompt: true %><br><br>
    <%= f.collection_select :employee_id, Employee.all, :id, :name, prompt: true %><br><br>
    <%= f.submit "Create Appointment" %>
    <% end %>
    <br><hr>    
    <%= link_to "back", home_path %>
